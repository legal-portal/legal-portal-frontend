{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext", 
    "jsx": "preserve", 
    "lib": ["dom", "dom.iterable", "esnext"], 
    "noEmit": true,
    "baseUrl": ".", 
    "incremental": true, 
    "isolatedModules": true,
    "allowJs": true,
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}