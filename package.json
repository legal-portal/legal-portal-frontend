{
  "private": true,
  "workspaces": [
    "apps/*",
    "tooling/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "turbo run test -- --forceExit --passWithNoTests",
    "format": "turbo run format"
  },
  "devDependencies": {
    "husky": "latest",
    "lint-staged": "latest",
    "turbo": "latest",
    "wait-on": "latest"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "packageManager": "npm@10.8.1",
  "overrides": {
    "@nestjs/bull": "latest",
    "@nestjs/common": "latest",
    "@nestjs/core": "latest",
    "rxjs": "latest"
  },
  "lint-staged": {
    "**/*": "turbo run precommit:format --"
  }
}
